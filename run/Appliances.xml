<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Appliances xmlns="http://github.com/camueller/SmartApplianceEnabler/v1.5">
    <Appliance id="F-00000001-000000000001-00">
        <StartingCurrentSwitch>
            <HttpSwitch>
                <HttpWrite url="http://thermomix/cm?cmnd=Power%20On">
                    <HttpWriteValue name="On"/>
                </HttpWrite>
                <HttpWrite url="http://thermomix/cm?cmnd=Power%20Off">
                    <HttpWriteValue name="Off"/>
                </HttpWrite>
                <HttpRead url="http://thermomix/cm?cmnd=Power">
                    <HttpReadValue name="On" extractionRegex=":.ON"/>
                </HttpRead>
            </HttpSwitch>
        </StartingCurrentSwitch>
        <HttpElectricityMeter>
            <HttpRead url="http://thermomix/cm?cmnd=Status%208">
                <HttpReadValue name="Power" extractionRegex=",.Power.:(\d+)"/>
            </HttpRead>
        </HttpElectricityMeter>
        <Schedule enabled="true">
            <RuntimeRequest max="120" />
            <DayTimeframe>
                <Start hour="21" minute="0" second="0"/>
                <End hour="22" minute="0" second="0"/>
            </DayTimeframe>
        </Schedule>
    </Appliance>
    <Connectivity>
        <ModbusTCP id="wallbox" host="wallbox"/>
    </Connectivity>
</Appliances>
